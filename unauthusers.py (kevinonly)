def read_allowed_users(filename):
    with open(filename, 'r') as file:
        return [line.strip() for line in file]

def check_users(users_to_check, allowed_users, system_users):
    authorized_users = set(allowed_users)
    system_user_set = set(system_users)

    for user in users_to_check:
        if user in authorized_users:
            print(f'{user} is an authorized user.')
        elif user in system_user_set:
            print(f'{user} is a system user.')
        else:
            print(f'{user} is neither authorized nor a system user.')

if __name__ == "__main__":
    # Prompt for authorized users
    allowed_users = input("Enter authorized users (comma-separated): ").split(',')

    # List of known system users (Add more as you see fit)
    system_users = ['root', 'daemon', 'bin', 'sys', 'sync', 'games', 'man', 'lp', 'mail',
                    'news', 'uucp', 'proxy', 'www-data', 'backup', 'list', 'irc',
                    'gnats', 'nobody', 'systemd-network', 'systemd-resolve', 'syslog',
                    'messagebus', '_apt', 'tss', 'sshd', 'landscape', 'pollinate', 'colord', 'whoopsie']

    # List of users to check
    users_to_check = input("Enter users to check (comma-separated): ").split(',')

    check_users(users_to_check, allowed_users, system_users)
